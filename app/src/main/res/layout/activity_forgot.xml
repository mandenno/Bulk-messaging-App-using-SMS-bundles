<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ForgotCode">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></ScrollView>

    <TextView
        android:id="@+id/admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="Forgot your code?"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/requestf"
        android:layout_alignRight="@+id/requestf"
        android:layout_below="@+id/admin"
        android:layout_marginTop="18dp"
        android:gravity="start"
        android:text="Enter the email address you used when requesting for the code."
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/emailf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="Enter your email here..."
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/requestf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/emailf"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/emailf"
        android:backgroundTint="@color/colorPrimary"
        android:text="GET LOST CODE"
        android:textColor="@color/bg_color" />

</RelativeLayout>
