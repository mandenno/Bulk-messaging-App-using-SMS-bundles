<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Manual">
    <WebView
        android:layout_width="match_parent"
        android:id="@+id/webviewmanual"
        android:layout_above="@+id/tbdown"
        android:layout_height="match_parent"
       >

    </WebView>
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/tbdown"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/got"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:layout_alignEnd="@+id/webviewmanual"
        android:layout_alignRight="@+id/webviewmanual"
        android:layout_below="@+id/webviewmanual"
        android:backgroundTint="@android:color/black"
        android:text="GOT IT!"
        android:textColor="@android:color/white" />
</RelativeLayout>