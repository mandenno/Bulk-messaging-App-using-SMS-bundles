<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".SugBox">

    <EditText
        android:id="@+id/editTextsug"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/sug"
        android:layout_toStartOf="@+id/sug"
        android:ems="10"
        android:hint="Type your tips here..."
        android:inputType="textMultiLine"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/msgr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextsug"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginBottom="62dp"
        android:background="@drawable/textview"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="Waiting for new tips"
        android:textColor="#000"
        android:textSize="14sp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/msgr"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_send"
        app:backgroundTint="@color/colorAccent"
        app:fabSize="normal" />


</RelativeLayout>
