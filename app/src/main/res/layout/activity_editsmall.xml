<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.okangi.sm_admin.Edit_Small">
    <android.support.v7.widget.Toolbar
        android:id="@+id/ctbarxeditsmall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:titleTextColor="@android:color/white"
        ></android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="13dp"
        android:layout_marginTop="40dp"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:text="Name"
        android:textColor="@color/button_facebook_normal"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/mnamesmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/mphonesmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mnamesmall"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="Enter phone no"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mnamesmall"
        android:layout_marginTop="15dp"
        android:text="Phone"
        android:textColor="@color/button_facebook_normal"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/savebtnsmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/button_facebook_pressed"
        android:text="SAVE DETAILS"
        android:textColor="@color/bg_color" />
    </RelativeLayout>
</RelativeLayout>
